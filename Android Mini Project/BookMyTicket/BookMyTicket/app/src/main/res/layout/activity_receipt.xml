<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/backgroundimage2">

        <ImageView
            android:layout_width="212dp"
            android:layout_height="212dp"
            android:src="@drawable/receipt"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Pay the Fee at Gate \n   Total Payble Amount is"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/zillaslabregular"

            />
        <TextView
            android:id="@+id/fee"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text=""
            android:gravity="center"
            />
        <TextView
            android:fontFamily="@font/zillaslabregular"

            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank You ! \n Your Seat Reserved"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:fontFamily="@font/zillaslabregular"

            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Call \n 011-2236475 For the Confirmation"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            />

    </LinearLayout>




</RelativeLayout>